# ==============================================
# KORADIUS PRODUCTION ENVIRONMENT VARIABLES
# ==============================================
# Copy this to .env and update ALL values for your production environment
# IMPORTANT: Generate new secure keys for production!

# Database Configuration
POSTGRES_USER=myuser
POSTGRES_PASSWORD=CHANGE-THIS-SECURE-DATABASE-PASSWORD
POSTGRES_DB=mydatabase
POSTGRES_PORT=5432

# Backend Security Configuration (GENERATE NEW KEYS FOR PRODUCTION!)
JWT_SECRET=CHANGE-THIS-TO-A-LONG-RANDOM-STRING-FOR-PRODUCTION
ENCRYPTION_KEY=CHANGE-THIS-TO-64-CHARACTER-HEX-STRING-FOR-PRODUCTION
DEFAULT_ADMIN_PASSWORD=CHANGE-THIS-SECURE-ADMIN-PASSWORD

# CORS Configuration
CORS_ORIGIN=https://your-production-domain.com

# Frontend Configuration

# Vite configuration
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_API_BASE_URL=https://your-production-domain.com/api

# Google Analytics Configuration
GOOGLE_ANALYTICS_SERVICE_ACCOUNT_EMAIL=your-service-account-email
GOOGLE_ANALYTICS_PRIVATE_KEY=your-private-key
GOOGLE_ANALYTICS_VIEW_ID=your-view-id
